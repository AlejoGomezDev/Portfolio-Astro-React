---
import ContactForm from "./atoms/ContactForm.astro"
import ContactAnchor from '../components/atoms/ContactAnchor.astro';
import SocialLinks from '../content/json/SocialLinks.json';


const SocialData = SocialLinks.socialLinks
---
<div class="w-80 sm:w-2/3 m-auto mb-32">
    <h2 class="text-5xl pb-15">Contacto</h2>
    <div class="gap-6 grid grid-cols-1 sm:grid-cols-[1fr_2fr]">
        <div id="contact-div" class="border-violet-border p-5 sm:mb-0 mb-5 ">
            {
                SocialData.map((link)=>{
                    return(
                        <ContactAnchor {...link}/>
                    )
                })
            }
        </div>
        <div id="contact-div" class="border-violet-border flex flex-col"> 
            <ContactForm class="flex-grow"/>  
        </div>
    </div>

</div>