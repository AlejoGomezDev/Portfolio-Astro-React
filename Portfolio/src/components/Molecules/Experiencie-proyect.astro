---
    const{ url, imageUrl, alt, title,description} = Astro.props;

---
<aside class="bg-gray-900 p-6 grid grid-cols-2">
    <a
      href={url}
      target="_blank"
    >
      <div>
        <img
          src={imageUrl}
          alt={alt}
          class="rounded"
        />
      </div>
    </a>
      <div class="mx-auto px-5">
        <h3 class="text-2xl font-semibold mb-4">{title}</h3>
        <p class="text-lg leading-relaxed mb-4">
          {description}
        </p>
      </div>
  </aside>