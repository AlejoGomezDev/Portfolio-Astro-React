---
const { url, imageUrl, alt, title, Content } = Astro.props;
---

<aside class="bg-gray-900 p-6 grid grid-cols-2">
  <a href={url} target="_blank" class="w-2/3">
    <div>
      <img src={imageUrl} alt={alt} class="rounded" />
    </div>
  </a>
  <div class="mx-auto px-5">
    <h3 class="text-2xl font-semibold mb-4">{title}</h3>
    <Content />
  </div>
</aside>
