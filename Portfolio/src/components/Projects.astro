---
import { getCollection } from "astro:content"
import { Project } from '../components/Molecules/Project.tsx'

const projects = await getCollection('projectss')

const projectsWithContent = await Promise.all(
projects.map(async (project) => {
    const { data, render } = project;
    const { Content } = await render();

    return {
      ...data,
      Content,
    };
  })
);

---
<div class="w-2/3 m-auto text-center">
    <h1 class="text-5xl pb-15">Proyectos</h1>
    <div id="project-container">
      {projectsWithContent.map((project) => (
        <Project client:load {...project} />
      ))}
    </div>
  </div>