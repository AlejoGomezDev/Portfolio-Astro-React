---
interface Skill {
  name: string;
  icon: string;
  alt: string;
}

export interface Props {
  skill: Skill;
}

const { skill } = Astro.props;
---

<div class="flex flex-col p-4 hover:scale-115 transition-all duration-200 ease-in-out">
  <h5 class="pb-1 text-xs sm:text-lg">{skill.name}</h5>
  <img 
    src={skill.icon} 
    alt={skill.alt} 
    class="w-auto h-12 object-contain" 
  />
</div>
