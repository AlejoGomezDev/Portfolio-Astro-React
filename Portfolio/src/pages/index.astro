---
import NavBar from '../components/NavBar.astro';
import Layout from '../layouts/Layout.astro';
import Home from '../components/Home.astro';
import Experience from '../components/Experience.astro'
import Projects from '../components/Projects.astro';
---

<Layout>
	<header class="h-16 top-0 left-0 fixed w-full shadow-md z-50 backdrop-blur-sm">
		<NavBar />
	</header>
	<main class="pt-16">
		<section id="home" class="mb-32">
			<Home />
		</section>
		<div id="experience-projects">
			<section id="experience" class="h-auto text-white text-center w-full m-auto pt-15" >
				<Experience/>
				<br><br><br><br>
			</section>
			<section id="projects" class="text-white pt-15">
				<Projects />
			</section>
		</div>
	</main>
</Layout>

